@model IEnumerable<TCorp.EntityFramework.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, null,  new{@class = "btn"})
</p>
<table class="table table-hover filterable">
    <thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Username)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Firstname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Lastname)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Role)
			</th>
					<th>
				@Html.DisplayNameFor(model => model.IsBanned)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.IsBanned)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new{@class = "btn btn-mini btn-t"}) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new{@class = "btn btn-mini btn-t"}) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-mini btn-t" })
            @Html.ActionLink("Erase token", "EraseToken", new { id = item.Id }, new { onclick = "return confirm('Are you sure?');", @class = "btn btn-mini btn-t" })
            </td>
        </tr>
    }
	</tbody>

</table>

<script src="@Url.Content("~/Scripts/jquery.table-filter.js")"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('table.filterable').addTableFilter({
            labelText: "Filtriraj tablicu",
            size: 48
        });
    });
</script>