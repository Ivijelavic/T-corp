@model List<TCorp.EntityFramework.PredefinedDiscount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, null, new { @class = "btn" })
</p>
<table class="table table-hover filterable">
    <thead>
        <tr>
            <th>
                Naziv ponude
            </th>
            <th>
                U ugovornoj obvezi
            </th>
            <th>
                Trajanje u mjesecima
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contract.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationInMonths)
                </td>
                <td>
                    @Html.ActionLink("Uredi", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-t" }) |
                    @Html.ActionLink("Vidljivost", "Visibility", new { id = item.Id }, new { @class = "btn btn-mini btn-t" }) |
                    @* @Html.ActionLink("Detalji", "Details", new { id = item.Id }, new{@class = "btn btn-mini btn-t"}) | *@
                    @Html.ActionLink("Izbriši", "Delete", new { id = item.Id }, new { onclick = "return confirm('Jeste sigurni?');", @class = "btn btn-mini btn-t" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="@Url.Content("~/Scripts/jquery.table-filter.js")"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('table.filterable').addTableFilter({
            labelText: "Filtriraj tablicu",
            size: 48
        });
    });
</script>